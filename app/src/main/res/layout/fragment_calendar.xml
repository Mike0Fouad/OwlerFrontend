<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/calendar_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_medium">

    <!-- HEADER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_medium">

        <TextView
            android:id="@+id/tvCalendarTitle"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Space_cadet"
            android:text="@string/calendar"
            android:textColor="@color/white"
            android:textSize="60sp" />

        <TextView
            android:id="@+id/tvCurrentDate"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="136dp"
            android:layout_height="36dp"
            android:layout_marginTop="@dimen/padding_small"
            android:text="2025-04-27"
            android:textAlignment="viewStart"
            android:textColor="@color/Green_Blue"
            android:textSize="24sp" />

    </LinearLayout>

    <!-- BUILT-IN CALENDAR VIEW -->
    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:firstDayOfWeek="2"
        android:focusedMonthDateColor="@color/Jordy_Blue"
        android:selectedDateVerticalBar="@color/Cornflower_blue"
        android:unfocusedMonthDateColor="@color/Tropical_indigo"
        android:weekSeparatorLineColor="@color/Green_Blue" />
</LinearLayout>
